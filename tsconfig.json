{
  "extends": "./tsconfig.app.json",
  "compileOnSave": true,
  "compilerOptions": {
    "incremental": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
        "dom",
        "esnext"
    ],
    "allowJs": false,
    "checkJs": false,
    "downlevelIteration": true,
    "jsx": "preserve",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "outDir": "./build/",
    "rootDir": "./",
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    // "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "exclude": [
    "./node_modules",
    "./build",
    "./dev",
    "./config",
    "scripts",
    "acceptance-tests",
    "jest"
  ],
  "include": [
    "./src/custom.d.ts",
    "./src",
    "./apps/*"
  ]
}
